{
  "name": "unofficial-fluxer-client",
  "version": "1.4.5",
  "description": "An unofficial desktop client for Fluxer",
  "main": "main.js",
  "author": "Aldon (https://github.com/ByAldon)",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.aldon.unofficialfluxer",
    "productName": "Unofficial Fluxer Client",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Unofficial Fluxer Client",
      "artifactName": "Unofficial-Fluxer-Client-Setup-${version}.${ext}",
      "uninstallDisplayName": "Unofficial Fluxer Client",
      "license": "license.txt",
      "include": "installer.nsh",
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}