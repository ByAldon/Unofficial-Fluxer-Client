{
  "name": "fluxcap",
  "version": "1.4.9",
  "description": "An unofficial desktop client for Fluxer",
  "main": "main.js",
  "author": "Aldon (https://github.com/ByAldon)",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.aldon.fluxcap",
    "productName": "FluxCap",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FluxCap",
      "artifactName": "FluxCap-Setup-${version}.${ext}",
      "uninstallDisplayName": "FluxCap",
      "license": "license.txt",
      "include": "installer.nsh",
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}